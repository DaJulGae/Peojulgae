<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_margin="0dp"
        android:elevation="4dp">

        <!-- 메인 이미지 표시 (클릭하여 이미지 선택 가능) -->
        <ImageView
            android:id="@+id/edit_food_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="이미지 선택"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/image_border"
        android:padding="0dp" /> <!-- 이미지 패딩 제거 -->

        <!-- 음식 이름 입력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식 이름"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/edit_food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="음식 이름 입력"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- 음식 설명 입력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식 설명"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/edit_food_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="음식 설명 입력"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- 음식 가격 입력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식 가격"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/edit_food_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="음식 가격 입력"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- 음식 할인율 입력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식 할인율 (%)"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/edit_food_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="음식 할인율 입력"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- 음식 수량 입력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식 수량"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/edit_food_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="음식 수량 입력"
            android:inputType="number"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장"
            android:backgroundTint="#ff6f00"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
