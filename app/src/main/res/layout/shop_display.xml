                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:background="@null"
                android:ems="10"
                android:inputType="text"
                android:text="- Since1993 가나점보돈까스!" />

            <TextView
